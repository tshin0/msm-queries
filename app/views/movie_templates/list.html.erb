<h1>List of All Movies</h1>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th> </th>
  </tr>

  <% Movie.all.each do |a_movie| %>
      <tr>
        <td><%= a_movie.id %></td>
        <td>
          <img src="<%= a_movie.image %>" width=100>
          </td>
        <td><%= a_movie.title %></td>
        <td><%= a_movie.year %></td>
        <td>
          <% matching_records = Director.where({ :id => a_movie.director_id}) %>
          <%= matching_records.at(0).name %>
        
        <td><a href="/movies/<%= a_movie.id %>">
        Show details</a></td>
      </tr>
  <% end %>

</table>
